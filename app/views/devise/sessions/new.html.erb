 <br><br>
  <div class="container">
    <div class="row" >
      <div class="col-xs-12 col-sm-5 col-sm-offset-3">
        <div class="form-login" >

          <h2></h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :login,
                          required: false,
                          autofocus: true,
                          label: "Email ou matricule",
                          input_html: { autocomplete: "login" }, placeholder: "91890 or email@ocpgroup.ma" %>
                <div class="hidden-password">
                  <%= f.input :password,
                              required: false,
                              label: "Mot de passe",
                              input_html: { autocomplete: "current-password" }, placeholder: "••••••••••"%>

                  <span toggle="#user_password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>


              <%= f.input :remember_me, label:"Souvien de moi" ,as: :boolean if devise_mapping.rememberable? %>
              <div class="form-actions">
                <%= f.button :submit, "s'identifier", class:"btn own-button" %>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>









