<div class="container">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="form-login" >
      <h1>Members</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Pr√©nom</th>

            <th scope="col">Date de naissance</th>
            <th scope="col">Sexe</th>
            <th scope="col">Lien</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @members.each do |member| %>
            <tr>
              <th scope="row"><%= member.lastname %></th>
              <td><%= member.firstname %></td>
              <td><%= member.birthdate %></td>
              <td><%= Type.find(member.sexe).value %></td>
              <td><%= member.type.value %></td>
              <td><%= link_to '<i class="fas fa-camera-retro"></i>'.html_safe, edit_avatar_path(member), remote: true %>
              <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, member, remote: true %></td>
              <td><%= link_to '<i class="fas fa-marker edit-item"></i>'.html_safe, edit_member_path(member), remote: true,data: { modal: true } %></td>
              <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to '<i class="fas fa-user-plus" >Ajouter</i>'.html_safe, new_member_path, remote: true %>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="form-login" >
      <div id="tree"></div>
    </div>
  </div>
</div>