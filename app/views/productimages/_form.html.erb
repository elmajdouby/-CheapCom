<%= simple_form_for([product, productimage],remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-group">
    <div class="col-xs-4">
      <%= f.input :alt,label: false, placeholder: 'Name :', error: 'name is mandatory, please specify one',input_html: { class: 'form-control' }  %>
    </div>
    <div class="col-xs-4">
      <%= f.input :photo, label: false, input_html: { class: 'form-control', placeholder: "photo"} %>
      <%= f.input :photo_cache, as: :hidden, input_html: { class: 'form-control'} %>
    </div>
    <div class="col-xs-4">
      <%= form_tag productimage_path(f) do %>
        <%= submit_tag 'Add', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<% end %>


