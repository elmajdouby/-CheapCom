<p id="notice"><%= notice %></p>

<h1>Productimages</h1>

<table>
  <thead>
    <tr>
      <th>Alt</th>
      <th>Src</th>
      <th>User</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productimages.each do |productimage| %>
      <tr>
        <td><%= productimage.alt %></td>
        <td><%= productimage.src %></td>
        <td><%= productimage.user %></td>
        <td><%= productimage.product %></td>
        <td><%= link_to 'Show', productimage %></td>
        <td><%= link_to 'Edit', edit_productimage_path(productimage) %></td>
        <td><%= link_to 'Destroy', productimage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Productimage', new_productimage_path %>
