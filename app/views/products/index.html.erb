<h1> Futured items </h1>
<div class="products">
  <div class="container">
      <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= product.thumb %>);">
            <div class="card-category"><%= product.producttype.name %></div>
            <div class="card-description">
              <h2><%= product.name %></h2>
              <p><%= product.name %></p>
            </div>
            <img class="card-user avatar" src="https://kitt.lewagon.com/placeholder/users/atmosfeer">
            <a class="card-link" href="<%= product_path(product) %>"></a>
        </div>
      </div>

      <% end %>
  </div>
</div>

