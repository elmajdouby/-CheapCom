<div class="container navbar-wagon-clear">
  <div class="row ">
    <div class="col-xs-3 col-sm-2 col-md-2 navbar-logo">
      <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "logo.png", class:"logo-icon"  %>
      <% end %>
    </div>
    <div  class="col-xs-7 col-sm-7 col-md-6 navbar-items">
      <form id="search_nav-logged" action=<%= productsearch_path %> class="search_input " accept-charset="UTF-8" method="get">
        <div class="input-group stylish-input-group ">
          <input type="text" name="query" class="form-control" placeholder="Type your product : Samsung,Iphone,..." >
          <span class="input-group-addon">
              <button type="button" id="show_categories_navbar">
                  <span class="glyphicon glyphicon-th"></span>
              </button>
          </span>
        </div>
      </form>
      <% if user_signed_in? && current_user.longitude.nil? && current_user.latitude.nil? %>
        <div type="button" id="btn-location" class="navbar-btn-location set-location navbar-search-show">
           <span class="glyphicon glyphicon-map-marker icon-lg"></span>
        </div>
      <% end %>
    </div>
    <div class="col-xs-2 col-sm-3 col-md-4 navbar-items">
        <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">
        <% if user_signed_in? %>
          <% if current_user.role == "admin" %>
            <%= link_to '<i class="fas fa-chart-line"></i>'.html_safe,charts_path, class: "navbar-wagon-item navbar-wagon-link" %>
            <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe,users_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <% end %>
          <% if current_user.role == "seller" %>
               <%= link_to '<i class="fas fa-chart-line"></i>'.html_safe,charts_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <% end %>
          <!-- Links when logged in -->
          <%= link_to '<span class="glyphicon glyphicon-th-large"></span>'.html_safe ,dashboard_path, class: "navbar-wagon-item navbar-wagon-link" %>

          <%= link_to '<span class="glyphicon glyphicon-envelope"></span>'.html_safe ,"#", class: "navbar-wagon-item navbar-wagon-link" %>


          <%= link_to '<span class="glyphicon glyphicon-bell"></span>'.html_safe ,"#", class: "navbar-wagon-item navbar-wagon-link" %>
          <!-- Avatar with dropdown menu -->
          <div class="navbar-wagon-item">
            <div class="dropdown">
              <% if current_user.avatar.present? %>
                <%= cl_image_tag current_user.avatar.url(:bright_face), height: 300, width: 400, class: "avatar dropdown-toggle" , id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <% else %>
                <%= image_tag image_path("default_avatar.png"), class: "avatar dropdown-toggle" , id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <% end %>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li>
                  <%= link_to edit_user_registration_path(current_user) do %>
                    <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>   <%= t(".sign_out", default: "Log out") %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        <% else %>
          <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn btn-primary" %>
        <% end %>
      </div>
      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">Some mobile link</a></li>
            <li><a href="#">Other one</a></li>
            <li><a href="#">Other one</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
