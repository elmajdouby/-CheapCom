<div class="container-full">

  <div class="logged_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/1600x900/?buy');">

        <div class="col-xs-11 col-sm-9 col-md-7">
        <div class="holder"></div>
          <%= form_tag productsearch_path, method: :get do %>
             <div class="input-group ">
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control input-lg",
                    placeholder: "Type your product : Samsung,Iphone,..."
                  %>
                <div class="input-group-btn">
                  <button class="btn btn-primary btn-lg" type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                  </button>
                </div>
              </div>
          <% end %>
        </div>

  </div>

</div>
